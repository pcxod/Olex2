#!/bin/bash
. ./paths

cd obj

export PATH=/usr/local/bin:$PATH

if [ $1 = "olex" ] 
then
  src=../../../..
  cd olex
  gcc $src/$1/$2.cpp `wx-config --cxxflags  --unicode --static` `python-config --includes` -I$src/alglib -I$src/sdl -I$src/xlib -I$src/glib -I$src/gxlib -I$src/repository -I$src/olex -S -D__WXWIDGETS__ -D_UNICODE -D__OD_BUILD__ -D__MAC__ -fexceptions -O3 -combine
  cd ../..
  ./link olex
elif [ $1 = "unirun" ]
then
  src=../../../..
  cd unirun
  gcc $src/$1/$2.cpp `wx-config --cxxflags  --unicode --static` `python-config --includes` -I$src/alglib -I$src/sdl -I$src/xlib -I$src/glib -I$src/gxlib -I$src/repository -I$src/olex -S -D__WXWIDGETS__ -D_UNICODE -D__OD_BUILD__ -D__MAC__ -fexceptions -O3 -combine
  cd ../..
  ./link unirun
else
  src=../../..
  gcc $src/$1/$2.cpp `wx-config --cxxflags  --unicode --static` `python-config --includes` -I$src/alglib -I$src/sdl -I$src/xlib -I$src/glib -I$src/gxlib -I$src/repository -I$src/olex -S -D__WXWIDGETS__ -D_UNICODE -D__OD_BUILD__ -D__MAC__ -fexceptions -O3 -combine
  cd ..
  ./link
fi


