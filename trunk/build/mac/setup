SetFile -a C olex2
mkdir -p olex2.app/Contents
mkdir -p olex2.app/Contents/MacOS
mkdir -p olex2.app/Contents/Resources
sed -e "s/IDENTIFIER/`echo . | sed -e 's,\.\./,,g' | sed -e 's,/,.,g'`/" \
	-e "s/EXECUTABLE/olex2/" \
	-e "s/VERSION/2.8.7/" \
	Info.plist.in >olex2.app/Contents/Info.plist
echo -n "APPL????" >olex2.app/Contents/PkgInfo
ln -f olex2 olex2.app/Contents/MacOS/olex2
